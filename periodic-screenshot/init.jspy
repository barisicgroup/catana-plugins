label1 = {}
label1.type = "text"
label1.name = "num-label"
label1.content = "Screenshot interval (s)"

input_interval = {}
input_interval.type = "input-number"
input_interval.name = "interval"

label2 = {}
label2.type = "text"
label2.name = "select-label"
label2.content = "Transparent screenshots?"

select = {}
select.type = "select"
