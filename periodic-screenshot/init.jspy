select.allowMultiple = False

button = {}
button.type = "button"
button.name = "confirm-button"
button.content = "Confirm settings"
button.callback = "periodic-screenshot::change-settings.jspy"

add_modal_window("Periodic Screenshot Properties", [label1, input_interval, label2, select, button])